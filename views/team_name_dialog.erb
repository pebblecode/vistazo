<% if @account %>
  <div id="team-name-dialog" title="Team name">
    <form id="team-name-form" action="/<%= @account.url_slug %>/update" method="post">
      <fieldset class="update-object-fieldset">
        <legend>Team name</legend>
        <label for="team_name">Account name</label>
        <input type="text"name="team_name" title="Team name" class="update-object-text-box" value="<%= @account.name %>"/>
        <button type="submit" name="update_team_name" value="true" class="submit-button">update</button>
      </fieldset>
    </form>
  </div>
<% end %>
